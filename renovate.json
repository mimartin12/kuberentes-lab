{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "pep621",
    "dockerfile",
    "argocd",
    "custom.regex"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "argocd/applications/*.yaml"
      ],
      "matchStrings": [
        "repoURL:\\s*oci://(?<depName>[^\\r\\n]+)\\r?\\n\\s*targetRevision:\\s*(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver"
    }
  ]
}