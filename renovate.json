{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "regexManager",
    "pep621",
    "dockerfile"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^argocd/applications/.+\\.yaml$"],
      "matchStrings": [
        "repoURL:\\s*oci://(?<depName>[^\\n]+)\\n\\s*targetRevision:\\s*(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver"
    }
  ]
}