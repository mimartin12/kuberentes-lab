{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "enabledManagers": [
    "argocd",
    "pep621",
    "dockerfile"
  ],
  "argocd": {
    "managerFilePatterns": [
      "argocd/applications/*.yaml"
    ]
  },
  "packageRules": [
    {
      "matchManagers": ["argocd"],
      "matchPackageNames": ["ghcr.io/kserve/charts/kserve-crd/kserve-crd"],
      "packageName": "ghcr.io/kserve/charts/kserve-crd"
    },
    {
      "matchManagers": ["argocd"],
      "matchPackageNames": ["ghcr.io/kserve/charts/kserve/kserve"],
      "packageName": "ghcr.io/kserve/charts/kserve"
    }
  ]
}